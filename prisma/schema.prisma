generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model UserModel {
  id            String         @id @unique @default(uuid())
  email         String         @unique
  username      String         @unique
  password      String
  refreshTokens RefreshToken[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  userProfile   ProfileModel?
  modules       ModuleModel[]
}

model RefreshToken {
  id          String    @id @unique @default(uuid())
  hashedToken String
  userId      String
  User        UserModel @relation(fields: [userId], references: [id], onDelete: Cascade)
  revoked     Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ProfileModel {
  id        String    @id @unique @default(uuid())
  userId    String    @unique
  user      UserModel @relation(fields: [userId], references: [id])
  name      String
  surname   String
  imageUrl  String
  darkTheme Boolean   @default(false)
  language  String    @default("english")
}

model ModuleModel {
  id          String    @id @unique @default(uuid())
  authorId    String    
  author      UserModel @relation(fields: [authorId], references: [id])
  name        String
  description String
  progress    Float     @default(0) 
  isPrivate   Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  terms       TermModel[]
}

model TermModel {
  id         String   @id @unique @default(uuid())
  moduleId   String   
  model      ModuleModel   @relation(fields: [moduleId], references: [id])
  term       String
  definition String
  status     String   @default("NOT_STARTED")
  isStarred  Boolean  @default(false)
  imageUrl   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
